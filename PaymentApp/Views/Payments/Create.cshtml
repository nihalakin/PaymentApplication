@model PaymentApp.Models.Payment
<style>

form {
    width: 100%;
    max-width: 400px; 
    margin: 0 auto; 
    display: flex;
    flex-direction: column;
    align-items: center; 
}

div {
    display: flex;
    justify-content: space-between;
    width: 100%;
    margin-bottom: 10px;
}

label {
    flex: 1;
    text-align: left;
}

input {
    flex: 2;
    padding: 5px;
}

.btn-blue{
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
}


</style>

<h2 class="mt-3 mb-3">Ödeme Talebi Oluştur</h2>

<form asp-action="CreatePayment" method="post">
    <div>
        <label>Ad Soyad</label>
        <input type="text" asp-for="AdSoyad" required />
    </div>
    <div>
        <label>Email</label>
        <input type="email" asp-for="Email" required />
    </div>
    <div>
        <label>Telefon</label>
        <input type="tel" asp-for="Telefon" required />
    </div>
    <div>
        <label>Tutar</label>
        <input type="number" asp-for="Tutar" step="0.01" required />
    </div>
    <button class="btn-blue" type="submit">Talep Oluştur</button>
</form>

